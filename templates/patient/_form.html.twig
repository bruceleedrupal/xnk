{% macro formGroup(form,name, fields) %}
    <div class="input-group form-group">
          <div class="input-group-prepend">
            <span class="input-group-text">{{ name }}</span>
          </div>
          {% for field in fields
            if (attribute(form, field) is defined) %}
            {{ form_widget(attribute(form, field)) }}
